#!/bin/bash

# Script Name: Transformer Synaptron Auto-Installer
# Description: # This script installs Docker, NVIDIA Docker, and deploys the Synaptron container.
# Revision: 1.0.0 # Initial version of the Synaptron setup script
# Author: [Johno]
# Last Updated: [2025-02-05]

# Changelog:
# v1.0.0 - Initial version of the Synaptron setup script
# v1.0.1 - Changed how docker was installed
# v1.1.0 - Added blue crystals and minor installation proccesess
# v1.1.1 - Removed wget and docker load, Added docker pull timpiltd/timpi-synaptron:latest, Updated docker run command use new image name.

# Display Timpi ASCII Logo
echo "================================================================"
echo "             â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—"
echo "             â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘"
echo "                â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘"
echo "                â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•‘"
echo "                â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘"
echo "                â•šâ•â•   â•šâ•â•â•šâ•â•     â•šâ•â•â•šâ•â•     â•šâ•â•"
echo "================================================================"
echo "                  Welcome to Synaptron Setup"
echo "================================================================"

# Confirm user wants to proceed
while true; do
    read -p "Have you installed the necessary NVIDIA graphics drivers? (yes/no): " yn
    case $yn in
        [Yy]* ) break ;;
        [Nn]* ) echo "Please install NVIDIA graphics drivers and re-run this script."; exit ;;
        * ) echo "Please answer yes or no." ;;
    esac
done

# Step 1: Update and Install Required Packages
echo "ğŸ”¹ Updating system and installing required packages..."
sudo apt update
sudo apt install -y ca-certificates curl gnupg lsb-release wget

# Step 2: Add Docker Repository and Install Docker
echo "ğŸ”¹ Adding Docker repository..."
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

echo "ğŸ”¹ Setting up Docker repository..."
echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

echo "ğŸ”¹ Installing Docker..."
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io

# Step 3: Enable and Start Docker
echo "ğŸ”¹ Enabling and starting Docker service..."
sudo systemctl enable docker
sudo systemctl start docker

# Step 4: Install NVIDIA Docker
echo "ğŸ”¹ Installing NVIDIA Docker..."
sudo curl -s -L https://nvidia.github.io/nvidia-docker/gpgkey | sudo apt-key add -
distribution=$(. /etc/os-release;echo $ID$VERSION_ID)
curl -s -L https://nvidia.github.io/nvidia-docker/$distribution/nvidia-docker.list | sudo tee /etc/apt/sources.list.d/nvidia-docker.list

echo "ğŸ”¹ Updating package lists and installing NVIDIA Docker..."
sudo apt-get update
sudo apt-get install -y nvidia-docker2
sudo systemctl restart docker

# Step 5: Pull and Deploy Synaptron from Docker Hub
echo "ğŸ”¹ Pulling Synaptron Docker image from Docker Hub..."
sudo docker pull timpiltd/timpi-synaptron:latest

# Step 6: Set Up Node Information and Run the Synaptron Container
echo "ğŸ”¹ Setting up Synaptron container..."
while true; do 
  read -p "Enter a unique node name (min. 16 characters): " node_name
  [ ${#node_name} -ge 16 ] && break || echo "âŒ Error: Node name must be at least 16 characters. Try again."
done

read -p "Enter your GUID: " guid

echo "ğŸ”¹ Running Synaptron container..."
sudo docker run --pull always --restart always -d -e NAME="$node_name" -e GUID="$guid" --gpus all timpiltd/timpi-synaptron:latest

# Step 7: Verify Installation
echo "ğŸ”¹ Verifying installation..."
sudo docker ps

echo "========================================================================="
echo "ğŸ‰ Synaptron Installation Complete! ğŸ‰"
echo ""
echo "Use the following commands to monitor your setup:"
echo "1ï¸âƒ£  Check running containers: sudo docker ps"
echo "2ï¸âƒ£  Restart container if needed: sudo docker start -ia <Your Container ID>"
echo "3ï¸âƒ£  Check GPU status: nvidia-smi"
echo "4ï¸âƒ£  View logs in real-time: sudo docker logs -f <container_id>"
echo "========================================================================="



